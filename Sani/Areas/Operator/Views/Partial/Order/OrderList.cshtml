<script id="orderSource" type="text/x-handlebars-template">
    {{#each orderList}}
    <tr role="row">
        <td class="text-blue-700">{{code}}</td>
        <td class="text-center pr-40">{{registerDate}}</td>
        <td class="text-center pr-40"><span class="label label-rounded label-info">{{customerName}}</span></td>
        <td class="text-center text-grey-300">{{orderTitles}}</td>
        <td class="text-center pr-40"><span class="label label-rounded label-warning">{{forceName}}</span></td>
        <td class="text-center text-grey-300 pr-40">{{byWho}}</td>
        <td class="text-center text-grey-300 pr-40">{{branchName}}</td>
        <td class="text-center pr-40"><span class="label label-rounded bg-slate">{{status}}</span></td>
        <td class="text-center control">
            <ul class="icons-list">
                <li class="dropdown dropup">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-menu"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a onclick="pageLoad('/Operator/Order/AddEdit/{{id}}','ویرایش سفارش','orderList')" class="text-blue-800"><i class="icon-pencil"></i>ویرایش</a></li>
                        <li><a id="delOrder" data-id="{{id}}" class="text-danger-800"><i class="icon-bin"></i>حذف</a></li>
                    </ul>
                </li>
            </ul>
        </td>
    </tr>
    {{/each}}
</script>
<div id="dataTable">
    <div class="datatable-header">
        <div class="dataTables_filter">
            <label>
                <span>جستجو بر اساس شناسه :</span>
                <input placeholder="تایپ کنید ..." id="searchorder" onkeyup="SearchOrder()" type="search">
            </label>
        </div>
        <div class="dataTables_length">
            <label>
                <span>نمایش :</span>
                <select class="select" id="pagesize">
                    <option value="10" selected="selected">10</option>
                    <option value="25">25</option>
                    <option value="40">40</option>
                </select>
            </label>
        </div>
    </div>
    <div class="datatable-scroll">
        <table class="table datatable-basic table-hover dataTable no-footer" id="tbl-Order">
            <thead>
                <tr role="row">
                    <th class="sorting_desc" data-sort="0" data-sort-type="false">شناسه</th>
                    <th class="text-center sorting pr-40" data-sort="1" data-sort-type="">تاریخ ثبت</th>
                    <th class="text-center sorting pr-40" data-sort="2" data-sort-type="">نام مشتری</th>
                    <th class="text-center sorting_disabled">عناوین سفارش</th>
                    <th class="text-center sorting pr-40" data-sort="4" data-sort-type="">نام نیرو</th>
                    <th class="text-center sorting_disabled pr-40">توسط</th>
                    <th class="text-center sorting pr-40" data-sort="6" data-sort-type="">نمایندگی</th>
                    <th class="text-center sorting pr-40" data-sort="7" data-sort-type="">وضعیت</th>
                    <th class="text-center control sorting_disabled">عملیات</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="datatable-footer">
        <div class="dataTables_info" id="tbl_Order_info"></div>
        <div class="dataTables_paginate paging_simple_numbers" id="orderPaging"></div>
    </div>
</div>
<div id="no-records" class="text-center hidden">
    <div class="icon-object no-border">
        <img class="img-responsive" src="~/Areas/Operator/assets/images/notFound.png" title="notDataFound" />
    </div>
    <h5 class="text-semibold">متاسفانه رکوردی یافت نشد!</h5>
    <p class="mb-15">داده‌ای برای نمایش وجود ندارد می‌توانید از طریق دکمه ثبت مورد جدیدی را ثبت نمائید.</p>
</div>
